# Production Environment Variables для Render.com

# Django Core
DEBUG=False
SECRET_KEY=your-generated-secret-key-will-be-here
DJANGO_SETTINGS_MODULE=shop.settings.production
ALLOWED_HOSTS=your-app-name.onrender.com,your-app-name-*.onrender.com
CSRF_TRUSTED_ORIGINS=https://your-app-name.onrender.com,https://your-app-name-*.onrender.com

# Database (буде автоматично встановлено Render)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Site URL
SITE_URL=https://your-app-name.onrender.com

# Email Settings для продакшену
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@example.com

# Admin User (буде створено автоматично при deploy)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!
ADMIN_PHONE=+380000000000

# Cloudinary (опційно, для зберігання медіа-файлів)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
