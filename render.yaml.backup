services:
  - type: web
    name: django-shop
    env: python
    plan: free
    buildCommand: bash build.sh
    startCommand: gunicorn shop.wsgi:application --bind 0.0.0.0:$PORT --timeout 600 --workers 1 --threads 2 --worker-class gthread --max-requests 500 --max-requests-jitter 50
    envVars:
      - key: PYTHON_VERSION
        value: 3.9.18
      - key: DATABASE_URL
        fromDatabase:
          name: django-shop-db
          property: connectionString
      - key: SECRET_KEY
        generateValue: true
      - key: DEBUG
        value: False
      - key: DJANGO_SETTINGS_MODULE
        value: shop.settings.production
      - key: ALLOWED_HOSTS
        value: django-shop.onrender.com,django-shop-*.onrender.com
      - key: CSRF_TRUSTED_ORIGINS
        value: https://django-shop.onrender.com,https://django-shop-*.onrender.com
      - key: SITE_URL
        value: https://django-shop.onrender.com
      - key: ADMIN_USERNAME
        value: admin
      - key: ADMIN_PHONE
        value: +380000000000
      - key: CLOUDINARY_CLOUD_NAME
        sync: false
      - key: CLOUDINARY_API_KEY
        sync: false
      - key: CLOUDINARY_API_SECRET
        sync: false
      - key: CRON_SECRET
        generateValue: true

  - type: cron
    name: sync-products-cron
    env: python
    schedule: "0 */2 * * *"
    buildCommand: pip install -r requirements.txt
    startCommand: python manage.py sync_products --skip-images && python manage.py update_prices_xls
    envVars:
      - key: PYTHON_VERSION
        value: 3.9.18
      - key: DATABASE_URL
        fromDatabase:
          name: django-shop-db
          property: connectionString
      - key: DJANGO_SETTINGS_MODULE
        value: shop.settings.production

databases:
  - name: django-shop-db
    databaseName: django_shop
    user: django_shop_user
    plan: free
